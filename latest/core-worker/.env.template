# Core Voice Worker Configuration Template
# Copy this file to .env and fill in your values
#
# cp .env.template .env
# nano .env  # or your favorite editor

# ===================================================================
# Backend API Configuration
# ===================================================================
# URL of your backend API that serves agent configurations
BACKEND_URL=http://localhost:3000

# ===================================================================
# LiveKit Configuration (Required)
# ===================================================================
# Your LiveKit server WebSocket URL
LIVEKIT_URL=wss://your-project.livekit.cloud

# Your LiveKit API credentials
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# ===================================================================
# Worker Configuration
# ===================================================================
# Worker name (shown in LiveKit dashboard)
WORKER_NAME=core-voice-worker

# Maximum concurrent jobs per worker instance
MAX_CONCURRENCY=25

# Configuration cache TTL in seconds (default: 300 = 5 minutes)
CONFIG_CACHE_TTL=300

# ===================================================================
# Logging Configuration
# ===================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: "colored" for development, "json" for production
LOG_FORMAT=colored

# ===================================================================
# Default API Keys (Fallback)
# ===================================================================
# These are used when agent-specific keys are not in database
# You can also set these at the agent level via AgentConfig

# OpenAI API Key (for LLM, TTS, or STT)
OPENAI_API_KEY=sk-your-openai-api-key

# Cartesia API Key (for TTS)
CARTESIA_API_KEY=your-cartesia-api-key

# Deepgram API Key (for STT or TTS)
DEEPGRAM_API_KEY=your-deepgram-api-key

# AssemblyAI API Key (for STT)
ASSEMBLYAI_API_KEY=your-assemblyai-api-key

# ElevenLabs API Key (for TTS)
ELEVEN_API_KEY=your-elevenlabs-api-key

# ===================================================================
# Alternative LLM Providers (Optional)
# ===================================================================
# Cerebras API Key
# CEREBRAS_API_KEY=your-cerebras-api-key

# Groq API Key
# GROQ_API_KEY=your-groq-api-key

# Google API Key (for Gemini)
# GOOGLE_API_KEY=your-google-api-key

# Amazon Bedrock (uses AWS credentials, not API key)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1

# ===================================================================
# Performance Tuning (Advanced)
# ===================================================================
# HTTP request timeout for config API (seconds)
# CONFIG_API_TIMEOUT=5

# Maximum cache size (number of entries)
# CONFIG_CACHE_MAX_SIZE=1000

# ===================================================================
# Development Options
# ===================================================================
# Enable debug mode (verbose logging)
# DEBUG=false

# Disable SSL verification (dev only, never use in production!)
# DISABLE_SSL_VERIFY=false

# ===================================================================
# Notes:
# ===================================================================
# - Never commit this file with real credentials to git!
# - Add .env to your .gitignore
# - For production, use environment variables or secret management
# - Per-agent API keys in database override these defaults
